{
  "labels": ["renovate"],
  "extends": ["config:base"],
  "rebaseWhen": "conflicted",
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)Aptfile"
      ],
      "matchStrings": [
        "(?<repologyDepName>.*?)(:(?<platform>.*?))?=(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "{{#if depName}}{{depName}}{{else}}debian_stable/{{repologyDepName}}{{/if}}",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "datasources": [
        "repology"
      ],
      "packagePatterns": [
        "^debian_stable/"
      ],
      "separateMajorMinor": false,
      "groupName": "packages",
      "groupSlug": "packages"
    },
    {
      "datasources": ["docker"],
      "groupName": "packages",
      "groupSlug": "packages"
    },
    {
      "packageNames": "renovatebot/github-action",
      "extends": ["schedule:monthly"]
    }
  ]
}
